<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/color_primary_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/color_secondary_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Toolbar.Light" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionMenuTextColor">@color/color_primary</item>
        <!--        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>-->
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
    </style>

    <style name="AppTheme.Toolbar.Light.TextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="text.bold" parent="text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="outline_box_edit_text">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:layout_margin">@dimen/distance_16</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="button.primary">
        <item name="android:background">@drawable/ripple_rounded_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button.grey">
        <item name="android:background">@drawable/ripple_rounded_grey</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button.accent">
        <item name="android:background">@drawable/ripple_rounded_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.StoryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.StoryApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StoryApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_navigation_view">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded</item>
    </style>

</resources>