<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_16"
        android:src="@drawable/ic_handle_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_16"
        android:layout_marginTop="@dimen/distance_18"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/distance_10"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_add_experience"
        style="@style/text.bold"
        android:layout_marginStart="@dimen/distance_8"
        android:layout_marginTop="@dimen/distance_26"
        android:text="Choose"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toEndOf="@+id/iv_close"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="@dimen/distance_48"
        android:layout_height="@dimen/distance_48"
        android:layout_marginStart="@dimen/distance_16"
        android:layout_marginTop="@dimen/distance_24"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/distance_8"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_experience"/>

    <TextView
        android:id="@+id/tv_camera"
        style="@style/text"
        android:layout_width="@dimen/distance_0"
        android:layout_marginStart="@dimen/distance_8"
        android:padding="@dimen/distance_16"
        android:text="@string/camera"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_camera"
        app:layout_constraintTop_toTopOf="@+id/iv_camera" />

    <ImageView
        android:id="@+id/iv_gallery"
        android:layout_width="@dimen/distance_48"
        android:layout_height="@dimen/distance_48"
        android:layout_marginStart="@dimen/distance_16"
        android:layout_marginTop="@dimen/distance_16"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:src="@drawable/ic_gallery"
        android:padding="@dimen/distance_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_camera"/>

    <TextView
        android:id="@+id/tv_gallery"
        style="@style/text"
        android:layout_width="@dimen/distance_0"
        android:layout_marginStart="@dimen/distance_8"
        android:padding="@dimen/distance_16"
        android:text="@string/gallery"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_gallery"
        app:layout_constraintTop_toTopOf="@+id/iv_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>